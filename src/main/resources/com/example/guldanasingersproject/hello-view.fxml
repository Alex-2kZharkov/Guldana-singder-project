<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" prefHeight="345.0" prefWidth="458.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="com.example.guldanasingersproject.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <children>
      <AnchorPane prefHeight="392.0" prefWidth="438.0" style="-fx-background-color: #EE886B#EE886B;">
         <children>
            <Label fx:id="welcomeText" layoutX="20.0" layoutY="20.0" prefHeight="22.0" prefWidth="400.0" text="Добро пожаловать в музыкальное приложение " textAlignment="CENTER" textFill="#1c2b47">
               <font>
                  <Font name="Lato Regular" size="17.0" />
               </font>
            </Label>
            <Button fx:id="loginButton" layoutX="116.0" layoutY="207.0" mnemonicParsing="false" onAction="#onLoginConnectButtonClick" prefHeight="45.0" prefWidth="211.0" style="-fx-background-color: #1C2B47#1C2B47;" text="Войти в систему" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="OPEN_HAND" />
               </cursor>
            </Button>
            <Button fx:id="exitButton" cancelButton="true" layoutX="116.0" layoutY="272.0" mnemonicParsing="false" onAction="#onExitButton" prefHeight="45.0" prefWidth="211.0" style="-fx-background-color: #1C2B47#1C2B47;" text="Закрыть приложение" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
            <TextField fx:id="loginField" layoutX="116.0" layoutY="79.0" prefHeight="26.0" prefWidth="211.0" />
            <Label layoutX="20.0" layoutY="80.0" prefHeight="20.0" prefWidth="108.0" text="Логин" textFill="#1c2b47">
               <font>
                  <Font name="Lato Regular" size="16.0" />
               </font>
            </Label>
            <Label layoutX="18.0" layoutY="137.0" prefHeight="20.0" prefWidth="108.0" text="Пароль" textFill="#1c2b47">
               <font>
                  <Font name="Lato Regular" size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" layoutX="116.0" layoutY="135.0" prefHeight="26.0" prefWidth="211.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>
